from PIL import Image
cards = {
    "Geologist": "С Днем геолога!.jpg",
    "Feminizm day": "С Днем Феминизма!.jpg",
    "Children's day": "С Днем защиты детей!.jpg"
}
def show_card(festa):
    if festa in cards:
        file_name = cards[festa]
        card = Image.open(file_name)
        card.show()
    else:
        print("Открытка к этому празднику не найдена")
festa = input("Для какого праздника вам нужна открытка?")
show_card(festa)
