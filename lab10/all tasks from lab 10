import json

def numeros1():
    with open('price.json', 'r', encoding='utf-8') as file:
        prodotti = json.load(file)
        
    for ptodotto in prodotti['products']:
        print(f'Название: {ptodotto["name"]}')
        print(f'Цена: {ptodotto["price"]}')
        print(f'Вес: {ptodotto["weight"]}')
        
        if ptodotto['available']:
            print('В Наличии\n')
        else:
            print('Нет в наличии\n')

def numeros2():
    with open('price.json', 'r', encoding='utf-8') as file:
        prodotti = json.load(file)

    new = {
        "name": input("Название: "),
        "price": input("Цена: "),
        "available": input("Есть ли товар в наличии: "),
        "weight": int(input("Вес: ")),
    }
