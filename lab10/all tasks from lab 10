def numeros3():
    prodotti = {}
    file = open("en-ru.txt")
    price1 = file.read().split("\n")
    print(price1)
    for i in price1:
        value, key = i.split('-')
        prodotti[key] = value

    file1 = open("ru-en.txt", "w+")

    prodotti = dict(sorted(prodotti.items()))

    for i, k in prodotti.items():
        file1.write(f'{i} - {k}\n')
   file1.close()

numeros1()
numeros2()
numeros3()
